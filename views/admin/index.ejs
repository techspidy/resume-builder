<script src="https://use.fontawesome.com/9985244d92.js"></script>
<script type="text/javascript">
    var ApolloConf = {
        appHost: '<%= appHost %>',
        host: '<%= host %>'
    };
    $(document).ready(function() {
        $('select').material_select();
    });    
</script>
</head>
<body>
<%- include('../parts/google-analytics'); %>

<!-- Page Wrap -->
<div class="apollo-wrapper" id="top">
    <nav class="navigation">
        <div class="logo-ui"><img src="img/logo-admin.png" /></div>
        <ul class="main-nav-apollo">
            <!-- <li class="nav-title"></li> -->
            <li ng-class="{ selected_menu_nav: getActiveSection('/resumes', '/') }">
                <a href="resumes"><i class="material-icons">work</i><span>My resumes</span></a>
                <span class="selected_arrow" ng-class="{ selected_arrow_active: getActiveSection('/resumes', '/') }"><i class="material-icons">arrow_drop_up</i></span>
            </li>
<!--             <li ng-class="{ selected_menu_nav: getActiveSection('/my-media') }">
                <a href="my-media"><i class="material-icons">add_a_photo</i><span>My media</span></a>
                <span class="selected_arrow" ng-class="{ selected_arrow_active: getActiveSection('/my-media') }"><i class="material-icons">arrow_drop_up</i></span>
            </li> -->
            <li ng-class="{ selected_menu_nav: getActiveSection('/my-account') }">
                <a href="my-account"><i class="material-icons">person</i><span>My account</span></a>
                <span class="selected_arrow" ng-class="{ selected_arrow_active: getActiveSection('/my-account') }"><i class="material-icons">arrow_drop_up</i></span>
            </li>
<!--             <li ng-class="{ selected_menu_nav: getActiveSection('/job-saved') }">
                <a href="job-saved"><i class="material-icons">bookmark_border</i><span>Saved jobs</span></a>
                <span class="selected_arrow" ng-class="{ selected_arrow_active: getActiveSection('/job-search') }"><i class="material-icons">arrow_drop_up</i></span>
            </li>   -->          
            <li ng-class="{ selected_menu_nav: getActiveSection('/job-search') }">
                <a href="job-search"><i class="material-icons">search</i><span>Job search</span></a>
                <span class="selected_arrow" ng-class="{ selected_arrow_active: getActiveSection('/job-search') }"><i class="material-icons">arrow_drop_up</i></span>
            </li>
            <li ng-show="user.meta.role != 'ADMIN'">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- ApolloResponsive -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-2176573140422894"
                     data-ad-slot="9214230033"
                     data-ad-format="auto"></ins>
                <script>
                (adsbygoogle = window.adsbygoogle || []).push({});
                </script>            
            </li>
            <li ng-show="user.meta.role === 'ADMIN'" class="admin-area-separator">Admin area</li>
            <li ng-show="user.meta.role === 'ADMIN'" ng-class="{ selected_menu_nav: getActiveSection('/admin-user-list') }">
                <a href="admin-user-list"><i class="material-icons">supervisor_account</i><span>Platform users</span></a>
                <span class="selected_arrow" ng-class="{ selected_arrow_active: getActiveSection('/admin-user-list') }"><i class="material-icons">arrow_drop_up</i></span>
            </li>            
        </ul>
    </nav>
    <!--main content-->
    <div class="main-content-ui">
        <div class="content">

            <!--top nav-->
            <div class="content-nav">

                    <nav>                
                        <div class="nav-wrapper">
                            <div class="brand-logo content_nav_title"><span ng-bind-html="headerTitle"></span><span>{{ curentEditedResumeName }}</span></div>                            
                            <ul class="right hide-on-med-and-down">
                                <li><a href="resumes"><i class="material-icons">work</i></a></li>
                                <li><a href="my-account"><i class="material-icons">person</i></a></li>
                                <li><a href="job-search"><i class="material-icons">search</i></a></li>
                                <li class="account-dropdown-ui">
                                    <a id="user_btn" class="dropdown-button" href="#!">
                                        <span class="user_thumb"><img ng-src="{{ user.userPhoto }}" /></span>
                                        <span class="user_name" style="">{{ user.firstName }} {{ user.lastName }}</span>
                                        <span class="user_submenu_arrow"><i class="material-icons">keyboard_arrow_down</i></span>
                                    </a>

                                    <ul id="dropdown_personal_acc" class="dropdown-content" style="min-width: 200px;">
                                      <li><a href="resumes">My resumes</a></li>
                                      <li><a href="my-account">My account</a></li>
                                      <li class="divider"></li>
                                      <li><a href="#" ng-click="logout($event)">Log out</a></li>
                                    </ul>                                    
                                </li>
                            </ul>
                        </div>
                    </nav>
            </div>
            <!--/top nav-->

            <div class="content-loader" ng-view>
            </div>
        </div>
    </div>
    <!--/main content-->
</div>
<!-- End Page Wrap -->

</body>
</html>
